<?xml version="1.0"?>
<ruleset name="Symfony Coding Standard">
    <description>PSR-12 Coding Standard for Symfony Projects</description>

    <arg name="extensions" value="php"/>
    <arg name="encoding" value="utf-8"/>

    <file>./src</file>
    <file>./tests</file>

    <rule ref="PSR12">
        <exclude name="PSR12.Classes.PropertyDeclaration.Underscore"/>
    </rule>
</ruleset>
